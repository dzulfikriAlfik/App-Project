RewriteEngine on

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L] 

RewriteCond %{REQUEST_FILENAME} !-d 
RewriteCond %{REQUEST_FILENAME}\.html -f 
RewriteRule ^(.*)$ $1.html [NC,L]

DirectoryIndex home-page/index.php
RewriteRule ^tentang-kami home-page/tentang-kami.php
RewriteRule ^kegiatan home-page/kegiatan.php
RewriteRule ^mitra home-page/mitra.php

